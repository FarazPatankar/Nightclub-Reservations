<div class="row">
<div class="container" style="margin-top: 25px">
<div class="col s5">
	<img class="responsive-img" src="http://placehold.it/400x750">
</div>
<div class="col s6 offset-s1">
	<%= form_for @reservation, :url => { :action => :create }, :html => {:class => "reservation-form"} do |f| %>

		<div class="field">
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>

		<div class="field">
			<%= f.label :date %>
			<%= f.date_field :date, :class => "datepicker" %>
		</div>

		<div class="field">
			<%= f.label :time %>
			<%= f.time_field :time, :class => "timepicker" %>
		</div>

		<div class="field">
			<%= f.label :table_number %>
			<%= f.number_field :table_number %>
		</div>

		<div class="field">
			<%= f.label :number_of_people %>
			<%= f.number_field :number_of_people %>
		</div>

		<div class="field">
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>

		<div class="field">
			<%= f.label :contact_number %>
			<%= f.text_field :contact_number %>
		</div>

		<div class="field">
			<%= f.label :comments %>
			<%= f.text_area :comments %>
		</div>

		<%= f.submit "Reserve", :class => "btn res-btn", :style => "margin-top: 25px;" %>
	<% end %>
</div>
</div>
</div>