<%= form_for @reservation, :url => { :action => :create } do |f| %>

	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<%= f.label :date %>
		<%= f.date_field :date, :class => "datepicker" %>
	</div>

	<div class="field">
		<%= f.label :time %>
		<%= f.time_field :time, :class => "timepicker" %>
	</div>

	<div class="field">
		<%= f.label :table_number %>
		<%= f.number_field :table_number %>
	</div>

	<div class="field">
		<%= f.label :number_of_people %>
		<%= f.number_field :number_of_people %>
	</div>

	<div class="field">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>

	<div class="field">
		<%= f.label :contact_number %>
		<%= f.text_field :contact_number %>
	</div>

	<div class="field">
		<%= f.label :comments %>
		<%= f.text_area :comments %>
	</div>

	<%= f.submit "Reserve", :class => "btn" %>
<% end %>